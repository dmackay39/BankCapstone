            <ToggleGroup fx:id="landingPageGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton id="customerRegistration" fx:id="customerRegistration" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="75.0" prefWidth="251.0" text="New Customer Registration" textFill="#08b0f8" toggleGroup="$landingPageGroup" />
