<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.canvas.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" prefHeight="719.0" prefWidth="712.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankcapstone.XYZBankController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="XYZ Bank" textFill="#08b0f8">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <VBox alignment="CENTER">
         <children>
            <RadioButton id="customerLogIn" fx:id="customerLogIn" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="75.0" prefWidth="161.0" text="Customer log-in">
               <toggleGroup>
                  <ToggleGroup fx:id="landingPageGroup" />
               </toggleGroup></RadioButton>
            <RadioButton id="customerRegistration" fx:id="customerRegistration" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="75.0" prefWidth="251.0" text="New Customer Registration" toggleGroup="$landingPageGroup" />
            <RadioButton id="employeeLogIn" fx:id="employeeLogIn" mnemonicParsing="false" prefHeight="75.0" prefWidth="162.0" text="Employee log-in" toggleGroup="$landingPageGroup" />
         </children>
      </VBox>
       <Button id="landingPageButton" fx:id="landingPageButton" onAction="#onHelloButtonClick" text="Submit" textAlignment="CENTER" textFill="#08b0f8">
         <font>
            <Font name="Verdana" size="24.0" />
         </font></Button>
      <Label fx:id="welcomeText" />
   </children>
</VBox>
