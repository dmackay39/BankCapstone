<VBox alignment="CENTER" prefHeight="719.0" prefWidth="712.0" spacing="20.0" style="-fx-background-color: #0E1E2B;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankcapstone.XYZBankController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="XYZ Bank" textFill="#08b0f8">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <RadioButton id="customerLogIn" fx:id="customerLogIn" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="75.0" prefWidth="161.0" text="Customer log-in" textFill="#08b0f8">
