<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="719.0" prefWidth="712.0" spacing="20.0" style="-fx-background-color: #0E1E2B;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankcapstone.EmployeeLoginPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Employee Login" textAlignment="CENTER" textFill="#08b0f8">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
        <Label text="Enter Company Email" textFill="#08b0f8">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <TextField fx:id="enterEmailField" prefHeight="31.0" prefWidth="359.0" />
        <Label text="Enter Password" textFill="#08b0f8">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <PasswordField fx:id="enterPasswordField" />
        <Hyperlink fx:id="ITSupportClickField" onAction="#CallEmployeeITSupportClick" text="Having trouble accessing your account? Call Employee IT Support " textFill="#2c5f78" />
        <VBox alignment="CENTER" />
        <Button id="employeeSubmitButton" fx:id="employeeSubmitButton" onAction="#employeeSubmitButtonClick" style="-fx-background-color: #fffff0;" text="Submit" textAlignment="CENTER" textFill="#1c3d52">
            <font>
                <Font name="Verdana" size="24.0" />
            </font></Button>
        <Label fx:id="loginText" textFill="#f51472" />
        <Hyperlink fx:id="forgotPasswordField" onAction="#onForgotPasswordLinkClick" text="Forgot Password? Click here!" textFill="#2c5f78" />
    </children>
</VBox>
